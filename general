---
 - name: install and start apache
   hosts: web
   vars:
     http_port:80
	 max_clients: 200
   remote_user: root

   tasks:
   - name: install httpd
     yum: pkg=httpd state=latest
   - name: write the apache config file
     template: src=/srv/httpd.j2 dest=/etc/httpd.conf
   - name: start httpd
     service: name=httpd state=started
   - name: add cache dir
     file:
	   path: /opt/cache
	   state: directory
   - name: install nginx
     state: latest
     notify: restart nginx
   handlers:
    - name: restart nginx
	  service:
	    name: nginx
		state: restarted



